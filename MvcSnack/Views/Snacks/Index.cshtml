@model MvcSnack.Models.SnackTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Snacks" asp-action="Index" method="get">
    <p>
        <select asp-for="SnackType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Snacks[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Snacks[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Snacks[0].Types)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Snacks[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Snacks[0].Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Snacks)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Types)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
